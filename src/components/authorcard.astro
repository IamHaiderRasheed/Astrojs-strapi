---
import { Image } from "astro:assets";

const { author} = Astro.props;
const apiUrl = import.meta.env.VITE_API_URL;
---

<div
  class="px-8 py-8 mt-3 text-gray-500 rounded-2xl bg-gray-50 dark:bg-gray-900 dark:text-gray-400">
  <div class="flex flex-wrap items-start gap-3 sm:flex-nowrap sm:gap-6">
    <div class="relative flex-shrink-0 mt-1">
      {
        author.avatar && (
          <Image
            src={`${apiUrl}${author.avatar.formats.thumbnail.url}`} 
            alt={author.name}
            width="96"
            height="96"
            loading="eager"
            class="rounded-full object-cover w-24 h-24"
          />
        )
      }
    </div>
    <div>
      <div>
        <p class="text-lg font-medium text-gray-800 dark:text-gray-300">
          About {author.name}
        </p>
      </div>
      <div class="mt-3">
        {author.about && <p>{author.about}</p>}
      </div>
    </div>
  </div>
</div>